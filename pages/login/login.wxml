<!--pages/login/login.wxml-->
<view class="container">
    <view class="header">
        <view>登录</view>
    </view>
    <form bindsubmit="formSubmit">
        <view class="section">
            <text>账号:</text>
            <input type="text" placeholder="邮箱或手机号" name="username"/>
        </view>
        <view class="section">
            <text>密码</text>
            <input password="true" name="password" />
        </view>
        <view class="button">
            <van-button type="primary" form-type="submit">确认</van-button>
        </view>
    </form>
    <view class="fpwd" bindtap="findpwd">
        <van-text>忘记密码</van-text>
    </view>
</view>
